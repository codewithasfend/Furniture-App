<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="RealWorldApp.Pages.PlaceOrderPage">
    <ContentPage.Content>
        <StackLayout Spacing="20"
                     Margin="25">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="8*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Image Source="leftarrow.png"
                       HeightRequest="40"
                       HorizontalOptions="Center"
                       VerticalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer x:Name="TapBack" Tapped="TapBack_Tapped"/>
                    </Image.GestureRecognizers>
                </Image>
                <Label Grid.Column="1"
                       TextColor="#2C2C2C"
                       Text="PLACE ORDER"
                       FontSize="Large"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       HorizontalTextAlignment="Center"
                       HorizontalOptions="Center" />
            </Grid>
            <Frame HasShadow="True"
                   Padding="25"
                   Margin="0,30,0,30">
                <StackLayout Margin="0,60,0,60"
                             Spacing="20">
                    <Label Text="Provide Your Details"
                           FontAttributes="Bold"
                           FontSize="Large"
                           HorizontalTextAlignment="Center"
                           TextColor="#2C2C2C" />
                    <Entry Placeholder="Name"
                           x:Name="EntName"
                           Keyboard="Text" />
                    <Entry Placeholder="Phone"
                           x:Name="EntPhone"
                           Keyboard="Numeric" />
                    <Editor Placeholder="Address"
                            HeightRequest="100"
                            x:Name="EntAddress" />
                </StackLayout>
            </Frame>
            <Button CornerRadius="25"
                    Text="Place My Order"
                    BackgroundColor="#FA6400"
                    TextColor="White"
                    x:Name="BtnPlaceOrder" 
                    Clicked="BtnPlaceOrder_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>